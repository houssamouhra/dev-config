echo "Preparing to push your code... 🚀"
echo "Running full ESLint check on the repository... 🔍"

# pnpm run lint

if [ $? -ne 0 ]; then
  echo "Lint errors detected! Push aborted. ❌"
  echo "Run 'pnpm run lint:fix' to fix what can be auto-corrected. 🧩"
  exit 1
fi

echo "All good! Code passed the lint check. ✅"
echo "Push in progress... ⬆️"
echo "Mission accomplished, sir! 🫡"
